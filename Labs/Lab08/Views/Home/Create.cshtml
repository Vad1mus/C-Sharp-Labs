@model Lab08.Models.Student
@{
    ViewBag.Title = "Добавление пользователя";
}
<body style="background: linear-gradient(0deg, rgba(107,39,218,1) 0%, rgba(199,128,233,1) 55%, rgba(255,255,255,1) 100%)">
    <div style="width: 600px; height: 400px; margin-left: 250px; margin-top: 30px; font-family: Arial; font-weight:bold">
        <form asp-action="create" asp-controller="home">
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Name</label>
                <input type="text" asp-for="FirstName" class="form-control" style="font-weight:bold; border-radius: 9px;border-color:mediumpurple; border-width:2px" />
            </div>
            <div class="form-group">
                <label asp-for="SecondName" class="control-label">Second Name</label>
                <input type="text" asp-for="SecondName" class="form-control" style="font-weight:bold; border-radius: 9px;border-color:mediumpurple; border-width:2px" />
            </div>
            <div class="form-group">
                <label asp-for="Faculty" class="control-label">Faculty</label>
                <input type="text" asp-for="Faculty" class="form-control" style="font-weight:bold; border-radius: 9px;border-color:mediumpurple; border-width:2px" />
            </div>
            <div class="form-group">
                <label asp-for="AcademicPerformance" class="control-label">Permormance</label>
                <input type="text" asp-for="AcademicPerformance" class="form-control" style="font-weight:bold; border-radius: 9px;border-color:mediumpurple; border-width:2px"/>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label">Age</label>
                <input type="number" asp-for="Age" class="form-control" style="font-weight:bold; border-radius: 9px;border-color:rebeccapurple; border-width:2px"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Add student" class="btn btn-default" style="font-weight: bold; background-color: #6ae0c1; padding: 7px; box-shadow: 10px 10px 10px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19); border-radius: 9px; color: darkslategrey; margin-left: 230px " />
            </div>
        </form>
    </div>
    
</body>
